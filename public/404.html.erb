  <style>
  .error {
    padding-top: 16%
  }
  p{
    text-align: center;
  }
  img{
    display: block;
    margin: 0 auto;
  }
  </style>
</head>

<body>
  <!-- This file lives in public/404.html -->
  <div class="error">
    <%# <img src="/404.png"> %>
    <%= image_tag(asset_path"404.png")%>
