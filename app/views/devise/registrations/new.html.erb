<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <p class=" has-text-centered has-background-success is-size-3">新規ユーザー登録</p>
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <form action="" class="box">
            <div class="field">
              <label for="" class="label"><%= f.label :name %></label>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '名前を入力' %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :email %></label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'katekate@email.com' %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :birthday %></label>
                <%= f.date_select :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(2000, 1 , 1), autofocus: true, autocomplete: "birthday" %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :sex %></label>
                <%= f.select :sex, [["未選択", "unanswered"], ["男性", "male"], ["女性", "female"]], autofocus: true %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :prefectures %></label>
                <%= f.select :prefectures, User.prefectures.keys, {}, autofocus: true %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %></label>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワードを入力' %>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :password_confirmation %></label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワードを再入力' %>
            </div>
            <div class="field">
              <%= f.submit "登録", class: "button is-primary" %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>