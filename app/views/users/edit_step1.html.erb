<h2>ユーザー情報編集〜基本情報〜 </h2>

<%= form_with(model: @user, local: true, url: edit_step2_user_path, method: :post, html: { class: 'first-main_box' }) do |f| %>

  <div class="field">
    <%= f.label :image %><br />
    <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '名前を入力' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'katekate@email.com' %>
  </div>

    <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(2000, 1 , 1), autofocus: true, autocomplete: "birthday" %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.select :sex, [["未選択", "unanswered"], ["男性", "male"], ["女性", "female"]], autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :prefectures %><br />
    <%= f.select :prefectures, User.prefectures.keys, {}, autofocus: true %>
  </div>

    <div class="actions">
    <%= f.submit "次へ" %>
  </div>

<% end %>

<%= link_to "戻る", user_path(@user) %>
