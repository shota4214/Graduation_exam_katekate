<h1><%= @user.name %>のページ</h1>

<% if @user.image? %>
  <%= image_tag @user.image.url %>
<% else %>
  <%= image_tag (asset_path'no_image.png') %>
<% end %>
<h3><%= @user.name %></h3>
<p><%= @user.prefectures %></p>
<p><%= @user_age %>代</p>
<p><%= @user.sex_i18n %></p>
<p>自己紹介<%= @user.introduction %></p>

<p>Twitter<%= @user.twitter_url %></p>
<p>Instagram<%= @user.instagram_url %></p>
<p>Tiktok<%= @user.tiktok_url %></p>
<p>Facebook<%= @user.facebook_url %></p>
<p>YouTube<%= @user.youtube_url %></p>
<p>Website<%= @user.website_url %></p>

<%= link_to "プロフィール編集", edit_user_registration_path(@user) %> |
<%= link_to "お気に入り一覧", favorites_path(@user) %>

<table>
  <tr>
    <th>記事種類</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.type_i18n %></td>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= link_to '詳細', article_path(article.id) %></td>
    <td><%= link_to "編集", edit_article_path(article.id) %></td>
    <td><%= link_to '削除', article_path(article.id), method: :delete, data: { confirm: "本当に削除しても良いですか？" } %></td>
  </tr>
<% end %>
</table>