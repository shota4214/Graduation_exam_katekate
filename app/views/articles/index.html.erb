<h1>記事一覧</h1>

<table>
  <tr>
    <th>記事種類</th>
    <th>投稿者</th>
    <th>PV数</th>
    <th>タイトル</th>
  </tr>

<% @articles.first(100).each do |article| %>
  <tr>
    <td><%= article.type_i18n %></td>
    <td><%= link_to article.user.name, user_path(article.user_id) %></td>
    <td><%= article.impressions_count %></td>
    <td><%= article.title %></td>
    <td><%= link_to '詳細', article_path(article.id) %></td>
  </tr>
<% end %>
</table>
<%= paginate @articles %>
