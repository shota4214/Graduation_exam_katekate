<%= form_with(model: @article, local: true, url: choose_new_or_edit ) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= @article.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="article_type">
    <%= f.label :type %>
    <%= f.select :type, Article.types_i18n.invert %>
  </div>
  <div class="article_image">
    <%= f.label :image %>
    <%= image_tag(@article.image.url) if @article.image && @article.image.url %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="article_title">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'タイトルを入力' %>
  </div>
  <div class="article_content">
    <%= f.label :content %>
    <%= f.text_area :content, size: '30x5', placeholder: '記事の内容を入力' %>
  </div>

  <%= f.submit '記事投稿' %>
  <%= f.submit '下書き保存', name: 'draft' %>
<% end %>
<%= link_to 'ブログ一覧画面に戻る', articles_path %>