          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <% if comment.user == current_user %>
          <td>
          <%= link_to edit_article_comment_path(article, comment), remote: true do %><button class="button is-small is-warning">編集</button><% end %> 
