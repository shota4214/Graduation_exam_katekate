<table>
  <tbody>
    <% comments.each do |comment| %>
      <% if comment.id.present? %>
        <tr>
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <% if comment.user == current_user %>
          <td>
          <%= link_to "編集", edit_article_comment_path(article, comment), remote: true %> |
          <%= link_to "削除", article_comment_path(comment.article_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?" } %>
          </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>